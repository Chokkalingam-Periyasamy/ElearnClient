@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model Elearn.ElearnModel.Module

@{
    ViewData["Title"] = "Create";
    int Data = (int)@HttpContextAccessor.HttpContext.Session.GetInt32("CourseId");

}
<style>
    body {
        color: white;
    }
    #mo{
        margin-left:880px;
    }
   
</style>
<div>
    <a class="btn btn-danger" asp-action="CourseIndex" asp-controller="Course">Back to AllCourses</a>
</div>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div style="text-align:center">Add Modules here !</div>
            <form asp-action="Create" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Courseid" class="control-label"></label>
                    <input asp-for="Courseid" value=@Data class="form-control" required />
                    <span asp-validation-for="Courseid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Modulename" class="control-label"></label>
                    <input asp-for="Modulename" class="form-control" required />
                    <span asp-validation-for="Modulename" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Video" class="control-label"></label>
                    <input asp-for="Video" class="form-control" required/>
                    <span asp-validation-for="Video" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

<div id="mo">
    <a class="btn btn-danger" asp-action="StaffModule" asp-controller="Module" asp-route-id="">Module List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
