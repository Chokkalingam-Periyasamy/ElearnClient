@model Elearn.ElearnModel.Module

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        color: white;
    }
</style>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Moduleid" />
            <div class="form-group">
                <label asp-for="Courseid" class="control-label"></label>
                <input asp-for="Courseid" class="form-control" />
                <span asp-validation-for="Courseid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modulename" class="control-label"></label>
                <input asp-for="Modulename" class="form-control" />
                <span asp-validation-for="Modulename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video" class="control-label"></label>
                <input asp-for="Video" class="form-control" />
                <span asp-validation-for="Video" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
